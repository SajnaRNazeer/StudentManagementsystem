@model StudentManagementsystem.Models.Login

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<div class="container">
    <div class="row">
        <div class="col-mol-3">
            <h1>User Login</h1>&nbsp;&nbsp;
            <form asp-action="Login" autocomplete="off" method="post">
                <div class="form-group">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <label>UserName</label>&nbsp;&nbsp;
                    <input type="text" class="form-control" id="EmailId" name="EmailId" placeholder="Enter EmailId" Required/> &nbsp;&nbsp;
                     <span asp-validation-for="EmailId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Password</label>&nbsp;&nbsp;
                    <input type="password" class="form-control" id="UserPassword" name="UserPassword" placeholder="Enter UserPassword" Required /> &nbsp;&nbsp;
                     <span asp-validation-for="Userpassword" class="text-danger"></span>
                </div>

                <div class="form-check">
                    <button class="btn btn-info" type="reset">Clear</button>&nbsp;&nbsp;
                    <button type="submit" class="btn btn-info">Login</button>&nbsp;&nbsp;
                </div>
            </form>
            
        </div>
    </div>
</div>



